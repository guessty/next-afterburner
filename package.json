{
  "name": "next-firebase-starter",
  "version": "1.0.0",
  "repository": "https://github.com/guessty/next-firebase-started.git",
  "author": "guessty <christian.guest@outlook.com>",
  "license": "MIT",
  "scripts": {
    "start": "cd \"src/app\" && nodemon dev-server/index.ts",
    
    "lint-app": "tslint --project src/app",
    "typecheck-app": "tsc --project src/app",
    "test-app": "yarn lint-app && yarn typecheck-app && jest",
    "build-app": "yarn lint-app && yarn typecheck-app && cd \"src/app\" && next build",
    "build-public": "next export \"./src/app\" -o \"./dist/public\"",

    "lint-functions": "tslint --project src/functions",
    "copy-routes": "cpx \"*{dist/temp/config/routes.js,dist/temp/confing/routes.js.map\" \"dist/functions/config\"",
    "build-functions": "yarn lint-functions && tsc --project src/functions && yarn copy-routes",

    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\"",
    "install-deps": "cd \"dist/functions\" && npm i",
    
    "test": "jest",
    "build-all": "yarn build-functions && yarn build-public",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "firebase-admin": "~5.13.0",
    "firebase-functions": "^2.0.0",
    "next": "^6.1.1",
    "next-routes": "^1.4.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.2",
    "typescript": "latest"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.48",
    "@types/enzyme": "^3.1.13",
    "@types/jest": "^23.3.1",
    "@types/next": "^2.4.11",
    "@types/node": "^10.7.1",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.7",
    "@zeit/next-typescript": "1.1.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.5.1",
    "cpx": "1.5.0",
    "enzyme": "^3.4.2",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0",
    "nodemon": "^1.17.5",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.4.2",
    "ts-jest": "^23.1.3",
    "ts-node": "^4.1.0",
    "tslint": "~5.8.0",
    "typescript-babel-jest": "^1.0.5"
  }
}
